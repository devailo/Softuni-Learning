<section id="createPage">
    <form id='createForm' action="/toys/create" method="post">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="Title..." value="{{body.title}}">
        <label for="charity">For Charity:</label>
        <input type="text" id="charity" name="charity" placeholder="For Charity..." value="{{body.charity}}">
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" placeholder="Price..." value="{{body.price}}">
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" placeholder="Description..." value="{{body.description}}">
        <label for="category">Category:</label>
        <input type="text" id="description" name="category" placeholder="Category..." value="{{body.category}}">
        <label for="image">Image:</label>
        <input type="text" id="image" name="image" placeholder="Image..." value="{{body.image}}">
        <input type="submit" class="create" value="Create Toy Offer">
    </form>
</section>