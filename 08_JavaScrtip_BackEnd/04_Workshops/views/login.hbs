<section id="create-section" class="">

    <h1 class="item">Login</h1>

    <main class="item padded align-center">

        <form class="layout left large" method="post" action="/auth/login">
            {{#if error}}
            <div class="error-box">
                {{#each error.messages}}
                <p>{{this}}</p>
                {{/each}}
            </div>
            {{/if}}
            <div class="aligned">
                <label><span>username</span><input {{#if error.fields.name}}class="field-error" {{/if}} type="text"
                        name="username" value="{{body.username}}"></label>
                <label><span>password</span><input {{#if error.fields.name}}class="field-error" {{/if}} type="password"
                        name="password" value="{{body.password}}"></label>
            </div>

            <input class="cta action" type="submit" value="Sign In">

        </form>

    </main>

</section>