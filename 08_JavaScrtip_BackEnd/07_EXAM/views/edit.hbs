<main>
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Blog</h1>
            {{#with hotel}}
            <form>
                <label>Title:</label>
                <input name="" type="text" id="name" value={{title}}>

                <label>Image:</label>
                <input name="" type="text" id="image"
                    value={{imageUrl}}>

                <label>Content:</label>
                <textarea id="content"
                    name="">{{content}}</textarea>

                <label>Blog Category:</label>
                <input name="" type="text" id="catelory" value={{category}}>

                <input type="submit" id="btn" value="EDIT">
            </form>
            {{/with}}
        </div>
    </section>
</main>